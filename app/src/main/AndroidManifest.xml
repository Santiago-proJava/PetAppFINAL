<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petapp"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetApp"
        tools:targetApi="31">

        <!-- Actividad de Login (Lanzadora) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de Signup -->
        <activity android:name=".SignupActivity" />

        <!-- Hub principal -->
        <activity android:name=".MainActivity" />

        <!-- Funcionalidades -->
        <activity android:name="com.example.petapp.features.registerPet.RegisterPetActivity" />
        <activity android:name="com.example.petapp.features.vaccines.VaccineActivity" />
        <activity android:name="com.example.petapp.features.weight.WeightActivity" />
        <activity android:name="com.example.petapp.features.diet.ListaDietasActivity" />
        <activity android:name="com.example.petapp.features.diet.RegistroDietaActivity" />
        <activity android:name="com.example.petapp.features.medication.MedicamentoActivity" />
        <activity android:name="com.example.petapp.features.physicalActivityLog.RegistroActividadActivity" />
    </application>
</manifest>
